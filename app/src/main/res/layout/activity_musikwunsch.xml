<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fh_muenster.clubchamp.Musikwunsch">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voten"
        android:id="@+id/button_vote"
        android:layout_row="0"
        android:layout_column="9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wunsch"
        android:hint="Hier Wunsch eintragen"
        android:layout_below="@+id/tvWunschliste"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button_Logout"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_wabgeben" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abgeben"
        android:id="@+id/button_wabgeben"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_vote" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvw"
        android:layout_below="@+id/wunsch"
        tools:listitem="@android:layout/simple_list_item_multiple_choice"
        android:layout_alignEnd="@+id/wunsch"
        android:layout_above="@+id/button_vote" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wunschliste"
        android:id="@+id/tvWunschliste"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/tvUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button_Logout" />

</RelativeLayout>
