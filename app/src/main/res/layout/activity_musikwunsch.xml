<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fh_muenster.clubchamp.Musikwunsch">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wunsch Voten"
        android:id="@+id/button_wunsch"
        android:layout_row="0"
        android:layout_column="9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wunsch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Hier Wunsch eintragen" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/wunsch"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button_wunsch"
        android:smoothScrollbar="true"
        tools:listitem="@android:layout/simple_list_item_multiple_choice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abgeben"
        android:id="@+id/button_wabgeben"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_wunsch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/button_Logout"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_wabgeben" />

</RelativeLayout>
